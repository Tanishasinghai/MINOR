<% layout('/layouts/boilerplate')%> 
<div class="row">
           <h1 class="text-center mx-auto">Create Your Profile</h1>
           <div class='col-6 offset-3'>
            <form action='/chaperones'  method='POST'>
                <div class='mb-3'>
                    <label class='form-label' for='firstName'>First Name</label>
                    <input class='form-control' type='text' id='title' name='chaperone[firstName]' required>
                    <div class='valid-feedback'>
                      Looks Good!
                    </div>
                </div>
                <div class='mb-3'>
                    <label class='form-label' for='lastName'>Last Name</label>
                    <input class='form-control' type='text' id='title' name='chaperone[lastName]' required>
                    <div class='valid-feedback'>
                      Looks Good!
                    </div>
                </div>

                <div class='mb-3'>
                    <label class='form-label' for='phone'>Contact</label>
                    <input class='form-control' type='text' id='title' name='chaperone[phone]' required>
                    <div class='valid-feedback'>
                      Looks Good!
                    </div>
                </div>

               <div class='mb-3'>
                    <label class='form-label' for='location'>Location</label>
                    <input class='form-control' type='text' id='location' name='chaperone[location]' required>
                    <div class='valid-feedback'>
                        Looks Good!
                      </div> 
                </div>
               
                <div class="mb-3">
        <label class='form-label' for='price'>Fee: </label>           
       <div class="input-group">
            <span class="input-group-text" id='price-label'>$</span>
           <input type='text' class='form-control' id='price' placeholder='0.0'  aria-label="price"
           aria-describedby="price-label" name='chaperone[price]' required>
           <div class='valid-feedback'>
            Looks Good!
          </div>
        </div>
        <div class='mb-3'>
            <label class='form-label' for='description'>Description</label>
            <textarea class='form-control' type='text' id='description' name='chaperone[description]' required></textarea>
            <div class='valid-feedback'>
                Looks Good!
              </div>       
        </div>
        
                <div class="mb-3">
                    <button class='btn btn-success'>Save</button>
                </div>
                  </form>
            <a href='/campgrounds'>All Campgrounds</a>
           </div>
       </div>
    
       