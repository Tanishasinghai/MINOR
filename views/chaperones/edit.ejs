<% layout('/layouts/boilerplate')%> 
<div class="row">
           <h1 class="text-center mx-auto">Edit Your Profile</h1>
           <div class='col-6 offset-3'>
            <form action='/chaperones/<%=chaperone._id%>?_method=PUT'  method='POST' >
                <div class='mb-3'>
                    <label class='form-label' for='firstName'>first Name</label>
                    <input class='form-control' type='text' id='firstName' name='chaperone[firstName]'  value='<%= chaperone.firstName%>' required>
                   
                </div>
                <div class='mb-3'>
                    <label class='form-label' for='lastName'>Last Name</label>
                    <input class='form-control' type='text' id='lastName' name='chaperone[lastName]'  value='<%= chaperone.lastName%>' required>
                    
                </div>
                <div class='mb-3'>
                    <label class='form-label' for='phone'>phone</label>
                    <input class='form-control' type='text' id='phone' name='chaperone[phone]'  value='<%= chaperone.phone %>' required>
                      
                </div>
                <div class='mb-3'>
                    <label class='form-label' for='location'>Location</label>
                    <input class='form-control' type='text' id='location' name='chaperone[location]' value='<%=chaperone.location%>' required>
                      
                <div class="mb-3">
        <label class='form-label' for='price'>Fee</label>           
       <div class="input-group">
            <span class="input-group-text" id='price-label'>$</span>
           <input type='text' class='form-control' id='price' placeholder='0.0'  aria-label="price"
           aria-describedby="price-label" name='chaperone[price]' value='<%=chaperone.price%>' required>
           
        </div>
        <div class='mb-3'>
            <label class='form-label' for='description'>Description</label>
            <textarea class='form-control' type='text' id='description' name='chaperone[description]' required><%=chaperone.description%></textarea>
                
        </div>
        
    
                <div class="mb-3">
                    <button class='btn btn-info'>Update</button>
                </div>
                  </form>
                  <a href='/chaperones/<%= chaperone._id%>'>back to explore Page</a>
                </div>
       </div>
    